{
  "formatter": "prettier",
  "lineWidth": 100,
  "indentWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "printWidth": 100,
  "tabWidth": 2,
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-console": "warn",
    "no-unused-vars": "warn",
    "prefer-const": "error"
  },
  "ignore": [
    "node_modules",
    "dist",
    "build",
    ".git",
    "*.log"
  ]
}